<h1><%= @user.name %>：マイページ</h1>

<% if @user.icon_image.present? %>
  <p>プロフィール写真</p>
    <%= image_tag @user.icon_image.to_s, size: '100x100' %>
  <% else %>
    <%= image_tag 'noimage.png', size: '100x100' %>
  <% end %>

<p>メールアドレス：<%= @user.email %></p>

<%= link_to 'プロフィールの編集', edit_user_path(@user), class:'btn btn-secondary'%>
<br>
<%= link_to 'アカウントの削除', user_path(@user.id), method: :delete, data:{confirm:'本当に削除して良いですか？'}, class:'btn btn-danger'%>
<br>
<%= link_to '新規投稿', new_blog_path, class:'btn btn-info' %>
<br>
<%= link_to 'お気に入り一覧', favorite_path, class:'btn btn-warning' %>