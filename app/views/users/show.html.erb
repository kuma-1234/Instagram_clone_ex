<h1><%= @user.name %>：マイページ</h1>

<% if @user.icon_image.present? %>
  <p>プロフィール写真</p>
    <%= image_tag @user.icon_image.url, size: '100x100' %>
  <% else %>
    <%= image_tag 'noimage.png', size: '100x100' %>
  <% end %>

<p>メールアドレス：<%= @user.email %></p>

<%= link_to 'プロフィールの編集', edit_user_path(@user)%>
<%= link_to 'アカウントの削除', user_path(@user.id), method: :delete, data:{confirm:'本当に削除して良いですか？'}%>

<%= link_to '新規投稿', new_blog_path %>